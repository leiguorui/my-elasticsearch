{
  "_my_comment": "车源汇日志在elasticsearch中index template",
  "template": "sirius_log_*",
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 0
  },
  "mappings": {
    "user_action": {
      "_all": {
        "enabled": false
      },
      "_id": {
        "path": "id"
      },
      "properties": {
        "timestamp": {
          "type": "date",
          "fielddata": {
            "format": "doc_values"
          }
        },
        "uri": {
          "type": "string",
          "index": "not_analyzed"
        },
        "remote_ip": {
          "type": "ip"
        }
      }
    }
  }
}